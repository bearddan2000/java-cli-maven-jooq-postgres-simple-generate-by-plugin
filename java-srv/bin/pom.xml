<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>local</groupId>
	<artifactId>example</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>POC of jooq postgres app</name>
	<properties>
		<maven.compiler.source>11</maven.compiler.source>
		<maven.compiler.target>11</maven.compiler.target>
		<jooq.version>3.9.0</jooq.version>
		<db.version>42.2.18.jre7</db.version>
		<xml.serial.version>2.3.3</xml.serial.version>
	</properties>
	<dependencies>
		<!-- https://mvnrepository.com/artifact/log4j/log4j -->
		<dependency>
		    <groupId>log4j</groupId>
		    <artifactId>log4j</artifactId>
		    <version>1.2.17</version>
		</dependency>
		<dependency>
				<groupId>org.jooq</groupId>
				<artifactId>jooq</artifactId>
				<version>${jooq.version}</version>
		</dependency>
		<dependency>
				<groupId>org.jooq</groupId>
				<artifactId>jooq-meta</artifactId>
				<version>${jooq.version}</version>
		</dependency>
		<dependency>
				<groupId>org.jooq</groupId>
				<artifactId>jooq-codegen</artifactId>
				<version>${jooq.version}</version>
		</dependency>
		<dependency>
		    <groupId>javax.annotation</groupId>
		    <artifactId>javax.annotation-api</artifactId>
		    <version>1.3.2</version>
		</dependency>
		<dependency>
		    <groupId>org.postgresql</groupId>
		    <artifactId>postgresql</artifactId>
		    <version>${db.version}</version>
		</dependency>
		<dependency>
		    <groupId>jakarta.xml.bind</groupId>
		    <artifactId>jakarta.xml.bind-api</artifactId>
		    <version>${xml.serial.version}</version>
		</dependency>
		<dependency>
		    <groupId>org.glassfish.jaxb</groupId>
		    <artifactId>jaxb-runtime</artifactId>
		    <version>${xml.serial.version}</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
      <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>exec-maven-plugin</artifactId>
          <version>1.6.0</version>
          <executions>
              <execution>
                  <goals>
                      <goal>java</goal>
                  </goals>
              </execution>
          </executions>
          <configuration>
              <mainClass>example.Main</mainClass>
          </configuration>
      </plugin>
	<plugin>
	  <groupId>org.jooq</groupId>
	  <artifactId>jooq-codegen-maven</artifactId>
	  <version>${jooq.version}</version>
	  <executions>
	    <execution>
	      <goals>
	        <goal>generate</goal>
	      </goals>
	    </execution>
	  </executions>
	  <dependencies>
			<dependency>
			    <groupId>javax.annotation</groupId>
			    <artifactId>javax.annotation-api</artifactId>
			    <version>1.3.2</version>
			</dependency>
			<dependency>
					<groupId>org.postgresql</groupId>
					<artifactId>postgresql</artifactId>
					<version>${db.version}</version>
			</dependency>
			<dependency>
					<groupId>jakarta.xml.bind</groupId>
					<artifactId>jakarta.xml.bind-api</artifactId>
					<version>${xml.serial.version}</version>
			</dependency>
			<dependency>
					<groupId>org.glassfish.jaxb</groupId>
					<artifactId>jaxb-runtime</artifactId>
					<version>${xml.serial.version}</version>
			</dependency>
	  </dependencies>
	  <configuration>
	    <jdbc>
	      <driver>org.postgresql.Driver</driver>
	      <url>jdbc:postgresql://db/animal</url>
	      <user>maria</user>
	      <password>pass</password>
	    </jdbc>
	    <generator>
	      <database>
	        <name>org.jooq.util.postgres.PostgresDatabase</name>
	        <includes>.*</includes>
	        <excludes></excludes>
	        <inputSchema>public</inputSchema>
	      </database>
	      <target>
	        <packageName>example.model</packageName>
	        <directory>src/main/java</directory>
	      </target>
	    </generator>
	  </configuration>
	</plugin>
		</plugins>
	</build>
</project>
